	<select id="getCodeList" parameterType="Code" resultType="Code">
		SELECT
		 * 
		FROM
		 tbl_code
		WHERE
		 fd_up_code = CASE WHEN #{fd_up_code}='' THEN '0000' ELSE #{fd_up_code} END	 
	</select>

	<select id="getCode" parameterType="Code" resultType="Code">
		SELECT
		 * 
		FROM
		 tbl_code 
		WHERE
		 pk_code = #{pk_code}	 
	</select>
</mapper>